<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
        <!-- vertical ScrollView to make all the items or views scrollable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
                <!-- LinearLayout Inside ScrollView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <!-- create a Linear Layout with horizontal orientation and weightSum property -->

                        <LinearLayout
                            android:id="@+id/texttLayoutt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="25sp"
                                    android:textColor="@color/teal_700"
                                    android:text="Register Now"
                                    android:id="@+id/textviewregister">

                                </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/firstLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <EditText
                                    android:id="@+id/userName"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/custom_input_field"
                                    android:hint="user name"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/secondLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->

                                <EditText
                                    android:id="@+id/userPassword"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/custom_input_field"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:hint="password"
                                    android:inputType="textPassword"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/thirdLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <EditText
                                    android:id="@+id/userContact"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/custom_input_field"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:hint="Contact"
                                    android:inputType="textPersonName"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/thirddLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <EditText
                                    android:id="@+id/idfk"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/custom_input_field"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:hint="District"
                                    android:inputType="textPersonName"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/thirudLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <EditText
                                    android:id="@+id/status"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/custom_input_field"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:hint="status"
                                    android:inputType="textPersonName"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"/>
                        </LinearLayout>

                        <LinearLayout
                    android:id="@+id/fgLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                        <!-- place one TextView and one EditText inside layout using weight property -->



                        <EditText
                            android:id="@+id/complainantDistrict"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/custom_input_field"
                            android:layout_weight="1.4"
                            android:hint="District code"
                            android:imeOptions="actionNext"
                            android:paddingLeft="10dp"
                            android:singleLine="true"/>
                </LinearLayout>
                        <!-- create a Linear Layout with horizontal orientation and weightSum property -->

                        <LinearLayout
                            android:id="@+id/ghLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->



                                <EditText
                                    android:id="@+id/complainantEmail"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/custom_input_field"
                                    android:hint="email"
                                    android:inputType="textEmailAddress"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true" />
                        </LinearLayout>
                        <!-- create a Linear Layout with horizontal orientation and weightSum property -->

                        <LinearLayout
                            android:id="@+id/sLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->



                                <EditText
                                    android:id="@+id/complainantName"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/custom_input_field"
                                    android:hint="Complainant Name"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"/>
                        </LinearLayout>
                        <!-- create a Linear Layout with horizontal orientation and weightSum property -->

                        <LinearLayout
                            android:id="@+id/fourthLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->



                                <EditText
                                    android:id="@+id/complainantAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/custom_input_field"
                                    android:hint="Complainant Address"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true" />
                        </LinearLayout>
                        <!-- create a Linear Layout with horizontal orientation and weightSum property -->

                        <LinearLayout
                            android:id="@+id/fifthLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->



                                <EditText
                                    android:id="@+id/complainantConcil"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/custom_input_field"
                                    android:hint="union concil"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true"/>
                        </LinearLayout>
                        <!-- create a Linear Layout with horizontal orientation and weightSum property -->

                        <LinearLayout
                            android:id="@+id/sixthLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->



                                <EditText
                                    android:id="@+id/guardian"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/custom_input_field"
                                    android:hint="Complainant guardian"
                                    android:imeOptions="actionNext"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true" />
                        </LinearLayout>
                        <!-- create a Linear Layout with horizontal orientation and weightSum property -->

                        <LinearLayout
                            android:id="@+id/seventhLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <EditText
                                    android:id="@+id/cnic"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:hint="CNIC"
                                    android:background="@drawable/custom_input_field"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/eightLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <EditText
                                    android:id="@+id/gender"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_weight="1.4"
                                    android:background="@drawable/custom_input_field"
                                    android:hint="gender"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPersonName"
                                    android:paddingLeft="10dp"
                                    android:singleLine="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/texttLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="@color/teal_700"
                                    android:text="already registered, login"
                                    android:id="@+id/textviewlogin">

                                </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buttonLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <Button
                                    android:id="@+id/Register"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAllCaps="false"
                                    android:gravity="center"
                                    android:text="Register" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/textLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                                <!-- place one TextView and one EditText inside layout using weight property -->


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:id="@+id/textview">

                                </TextView>
                        </LinearLayout>


                </LinearLayout>

        </ScrollView>

</LinearLayout>